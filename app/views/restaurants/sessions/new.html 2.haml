= stylesheet_link_tag 'devise', media: 'all'
.signinLogin
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .signinLogin__content
      = f.label :email, "Email"
      %br/
      = f.email_field :email, autofocus: true, class: "signinLogin__content__text"
    .signinLogin__content
      = f.label :password, "Password"
      = f.password_field :password, autocomplete: "current-password", class: "signinLogin__content__text"
    - if devise_mapping.rememberable?
      .signinLogin__content.signinLogin__contentCheck
        = f.check_box :remember_me, class: "signinLogin__contentCheck__check"
        = f.label :remember_me, "Remember Me"
    .signinLogin__content
      = f.submit "Log in"




